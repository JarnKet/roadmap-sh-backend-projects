<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="<%= locals.description || 'A simple personal blog for sharing thoughts and articles' %>"
        />
        <title><%= locals.title ? title + ' - ' + siteName : siteName %></title>

        <!-- Styles -->
        <link rel="stylesheet" href="/public/css/styles.css" />

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="/public/favicon.ico" />

        <!-- Open Graph / Social Media -->
        <meta
            property="og:title"
            content="<%= locals.title ? title + ' - ' + siteName : siteName %>"
        />
        <meta
            property="og:description"
            content="<%= locals.description || 'A simple personal blog for sharing thoughts and articles' %>"
        />
        <meta property="og:type" content="website" />

        <!-- Additional head content -->
        <%- locals.additionalHead || '' %>
    </head>
    <body>
        <!-- Header -->
        <header class="header">
            <div class="container">
                <div class="header-content">
                    <a href="/home" class="logo"><%= siteName %></a>
                    <nav>
                        <ul class="nav-links">
                            <li><a href="/home">Home</a></li>
                            <% if (locals.isAdmin) { %>
                            <li><a href="/admin">Dashboard</a></li>
                            <li><a href="/articles/new">New Article</a></li>
                            <% } else { %>
                            <li><a href="/admin">Admin</a></li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="content">
            <div class="container">
                <!-- Success/Error Messages -->
                <% if (locals.successMessage) { %>
                <div class="alert alert-success"><%= successMessage %></div>
                <% } %> <% if (locals.errorMessage) { %>
                <div class="alert alert-error"><%= errorMessage %></div>
                <% } %> <% if (locals.errors && errors.length > 0) { %>
                <div class="alert alert-error">
                    <ul class="error-list">
                        <% errors.forEach(error => { %>
                        <li>â€¢ <%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
                <% } %>

                <!-- Page Content -->
                <%- body %>
            </div>
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <p>
                    &copy; <%= currentYear %> <%= siteName %>. Built with
                    Node.js and Express.
                </p>
            </div>
        </footer>

        <!-- Additional scripts -->
        <%- locals.additionalScripts || '' %>
    </body>
</html>
